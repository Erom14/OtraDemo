@model Demo.Models.Post

@using (Html.BeginForm())
{
    <div class="form-group">
        <label for="Title">Título</label>
        @Html.TextBoxFor(o => o.Title, new {@class="form-control", placeholder="Ingrese título"})
        @Html.ValidationMessageFor(o => o.Title)
    </div>
    <div class="form-group">
        <label for="Comments">Comentario</label>
        @Html.TextAreaFor(o => o.Comments, new {@class = "form-control"})
        @Html.ValidationMessageFor(o => o.Comments)
    </div>
    <button type="submit" class="btn btn-default">Submit</button>

}